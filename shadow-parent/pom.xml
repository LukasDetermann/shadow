<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.determann</groupId>
    <artifactId>shadow-parent</artifactId>
    <packaging>pom</packaging>
    <version>0.3.0</version>

    <name>${project.groupId}:${project.artifactId}</name>
    <description>dependency and plugin management</description>
    <url>https://github.com/LukasDetermann/shadow</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Lukas Determann</name>
            <email>determann@protonmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com//LukasDetermann/shadow.git</connection>
        <developerConnection>scm:git:ssh://github.com:/LukasDetermann/shadow.git</developerConnection>
        <url>https://github.com/LukasDetermann/shadow</url>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>central</id>
            <url>https://central.sonatype.com/repository/maven-snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <maven.compiler.release>21</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <org.junit.jupiter.junit-jupiter-api.version>5.11.4</org.junit.jupiter.junit-jupiter-api.version>
        <org.junit.jupiter.junit-jupiter-engine>5.11.4</org.junit.jupiter.junit-jupiter-engine>
        <org.junit.jupiter.junit-platform-suite.version>1.11.4</org.junit.jupiter.junit-platform-suite.version>
        <org.apache.maven.plugins.maven-surefire-plugin.version>3.5.3</org.apache.maven.plugins.maven-surefire-plugin.version>
        <org.apache.maven.plugins.maven-source-plugin.version>3.3.1</org.apache.maven.plugins.maven-source-plugin.version>
        <org.apache.maven.plugins.maven-javadoc-plugin>3.11.2</org.apache.maven.plugins.maven-javadoc-plugin>
        <org.apache.maven.plugins.maven-gpg-plugin>3.2.7</org.apache.maven.plugins.maven-gpg-plugin>
        <org.sonatype.central.central-publishing-maven-plugin>0.9.0</org.sonatype.central.central-publishing-maven-plugin>
        <org.sonatype.plugins.nexus-staging-maven-plugin>1.7.0</org.sonatype.plugins.nexus-staging-maven-plugin>
        <org.apache.commons.commons-lang3.version>3.18.0</org.apache.commons.commons-lang3.version>
        <org.jetbrains.annotations.version>26.0.2</org.jetbrains.annotations.version>
        <javadoc.snippet.path>${project.basedir}/../documentation/src/test/java/io/determann/shadow/javadoc</javadoc.snippet.path>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${org.junit.jupiter.junit-jupiter-api.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-engine</artifactId>
                <version>5.11.4</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.junit.platform</groupId>
                <artifactId>junit-platform-suite</artifactId>
                <version>${org.junit.jupiter.junit-platform-suite.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-core</artifactId>
                <version>0.3.0</version>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-reflection</artifactId>
                <version>0.3.0</version>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-lang-model</artifactId>
                <version>0.3.0</version>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-annotation-processing</artifactId>
                <version>0.3.0</version>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-implementation-support</artifactId>
                <version>0.3.0</version>
            </dependency>
            <dependency>
                <groupId>io.determann</groupId>
                <artifactId>shadow-tck</artifactId>
                <version>0.3.0</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${org.apache.commons.commons-lang3.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jetbrains</groupId>
                <artifactId>annotations</artifactId>
                <version>${org.jetbrains.annotations.version}</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>test</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${org.apache.maven.plugins.maven-surefire-plugin.version}</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${org.apache.maven.plugins.maven-surefire-plugin.version}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>${org.apache.maven.plugins.maven-source-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>${org.apache.maven.plugins.maven-javadoc-plugin}</version>
                        <configuration>
                            <additionalJOption>--snippet-path ${javadoc.snippet.path}</additionalJOption>
                        </configuration>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>${org.apache.maven.plugins.maven-gpg-plugin}</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.sonatype.central</groupId>
                        <artifactId>central-publishing-maven-plugin</artifactId>
                        <version>${org.sonatype.central.central-publishing-maven-plugin}</version>
                        <extensions>true</extensions>
                        <configuration>
                            <publishingServerId>central</publishingServerId>
                            <autoPublish>true</autoPublish>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>